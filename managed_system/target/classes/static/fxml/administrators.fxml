<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.czm.managed_system.controller.AdministratorsController"
            prefHeight="300.0" prefWidth="500.0"
            stylesheets="@../css/login.css">
    <children>
        <VBox>
            <children>
                <HBox prefHeight="50.0" prefWidth="500.0" />
                <HBox prefHeight="50.0" prefWidth="500.0">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="100.0" text="用户名" textOverrun="CLIP" />
                        <TextField fx:id="registerName" prefHeight="40.0" prefWidth="350.0" />
                    </children>
                </HBox>
                <HBox prefHeight="50.0" prefWidth="500.0">
                    <children>
                    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="100.0" text="密码" textOverrun="CLIP" />
                    <PasswordField fx:id="registerPassword" prefHeight="40.0" prefWidth="350.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="72.0" prefWidth="500.0" style="-fx-spacing: 20;">
                    <children>
                        <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#register" prefHeight="36.0" prefWidth="127.0" text="注册">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="cancel" contentDisplay="CENTER" mnemonicParsing="false" onAction="#cancel" prefHeight="36.0" prefWidth="127.0" text="注销">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="500.0">
                    <Label text="注：只有root权限用户有注册/注销管理员权限！"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
